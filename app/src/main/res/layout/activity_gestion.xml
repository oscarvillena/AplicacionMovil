<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotofondomon"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID_usuario"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre_usuario"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo_electronico"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrase침a"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EsAdmin"
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>

        <EditText
            android:id="@+id/etID_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de usuario" />

        <EditText
            android:id="@+id/etNombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/etCorreo_electronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electr칩nico" />

        <EditText
            android:id="@+id/etContrase침a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a" />

        <EditText
            android:id="@+id/etEsAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EsAdmin" />


        <Button
            android:id="@+id/btnCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:layout_marginStart="16dp"
            app:cornerRadius="20dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnModificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:layout_marginStart="16dp"
            app:cornerRadius="20dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_marginStart="16dp"
            app:cornerRadius="20dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginStart="16dp"
            app:cornerRadius="20dp"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

</ScrollView>